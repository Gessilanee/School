<h1>Usuários</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">E-mail</th>
      <th scope="col">Data de criação</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.email %></td>
        <td><%= user.created_at %></td>
        <td>
          <%= link_to 'Detalhes', admin_user_path(user), class: 'btn btn-warning' %>
          <%= link_to 'Editar', edit_admin_user_path(user), class: 'btn btn-primary' %>
          <%= link_to 'Excluir', admin_user_path(user), method: :delete, class: 'btn btn-danger', data: { confirm: 'Deseja realmente excluir?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo', new_admin_user_path, class: 'btn btn-secondary'%>